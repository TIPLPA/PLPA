<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.codeplex.com"
        xmlns:calculator="clr-namespace:Calculator"
        xmlns:oxyPlot="clr-namespace:OxyPlot;assembly=OxyPlot"
        Title="Calculator" Height="350" Width="525">

    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="100"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Resources>
    <Window.DataContext>       
        <calculator:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <TextBox 
            VerticalContentAlignment="Top"
            Width="auto"
            Height="auto"
            TabIndex="1"
            AcceptsReturn="True"
            AcceptsTab="True"
            Grid.Row="0"
            Name="CodeBox"/>

        <Button
            Grid.Row="1"
            Content="Calculate"
            Margin="10 5"
            Click="CalculateClick"/>

        <Grid 
            Grid.Column="1"
            Grid.Row="0">

            <!--<oxy:Plot Model = "{Binding MyModel}"/>-->

        </Grid>

        <StackPanel
            Grid.Column = "2"
            Grid.Row = "0"
            Margin="5"
            Orientation="Horizontal">

            <GroupBox
                Header="Y-axis">

                <StackPanel
                    Orientation="Horizontal">
                    
                    <TextBox
                        Margin="5"
                        TabIndex="3"
                        Text="{Binding Path=YUpper, Mode=TwoWay}"/>

                    <TextBox
                        Margin="5" 
                        TabIndex="4"
                        Text="{Binding Path=YLower, Mode=TwoWay}"/>
                </StackPanel>

            </GroupBox>


            <GroupBox
                Header="X-axis">

                <StackPanel
                    Orientation="Horizontal">
                    <TextBox
                        Margin="5" 
                        TabIndex="4"
                        Text="{Binding Path=XLower, Mode=TwoWay}"/>

                    <TextBox
                        Margin="5" 
                        TabIndex="4"
                        Text="{Binding Path=XUpper, Mode=TwoWay}"/>
                    
                </StackPanel>

            </GroupBox>
        </StackPanel>


    </Grid>
</Window>
